<div class="container">
    <div class="row align-items-center">
        <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
            <h1>Strategy
                <a href="/strategy/<%= strategy.id %>/quantities" class="btn btn-primary float-right">Quantities</a>
            </h1>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Name:</label>
                <span class="form-control col-sm-10"><%= strategy.strategy_name %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Strategy Type:</label>
                <span class="form-control col-sm-10"><%= strategy.strategy_type.strategy_type_name %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Exchange:</label>
                <span class="form-control col-sm-10"><%= strategy.account.exchange.exchange_desc %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Account Type:</label>
                <span class="form-control col-sm-10"><%= strategy.account.account_type.account_type_name %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Paper:</label>
                <span class="form-control col-sm-10"><%= strategy.account.paper?"yes":"no" %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Symbol:</label>
                <span class="form-control col-sm-10"><%= strategy.symbol %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Initial Position:</label>
                <span class="form-control col-sm-10"><%= strategy.initial_position %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Order Qty:</label>
                <span class="form-control col-sm-10"><%= strategy.order_qty %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Buy orders:</label>
                <span class="form-control col-sm-10"><%= strategy.buy_orders %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Sell orders:</label>
                <span class="form-control col-sm-10"><%= strategy.sell_orders %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Active buys:</label>
                <span class="form-control col-sm-10"><%= strategy.active_buys %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Active sells:</label>
                <span class="form-control col-sm-10"><%= strategy.active_sells %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Step type:</label>
                <span class="form-control col-sm-10"><%= strategy.step_type %></span>
            </div>
            <div class="form-row">
                <label class="col-sm-2 col-form-label">Step:</label>
                <span class="form-control col-sm-10"><%= strategy.step %></span>
            </div>

            <div class="form-row">
                <div class="col-md-3">
                    <form action="/strategy/<%=strategy.id%>/delete" method="post">
                        <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modal-delete">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- contentFor('scripts') %>
<%- include('../partials/confirm-submit', {id:"modal-delete", okbutton:"Delete", msg:"Do you want to remove this strategy?"}) %>