<div class="container">
  <div class="row align-items-center">
    <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
      <h1>Strategies 
          <a href="/strategies/create" class="btn btn-primary float-right">New Strategy</a>
      </h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
            <th scope="col">Exchange</th>
            <th scope="col">Account</th>
            <th scope="col">Paper</th>
            <th scope="col">Valid</th>
            <th scope="col">Actions</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < locals.strategies.length; i++ ) { %>
            <% let strategy = strategies[i]; %>
            <tr id="<%= strategy.id%>">
              <td><span><%= strategy.strategy_type.strategy_type_name %></span></td>
              <td><span><%= strategy.strategy_name %></span></td>
              <td><span><%= strategy.account.exchange.exchange_desc %></span></td>
              <td><span><%= strategy.account.account_name %></span></td>
              <td><span><%= strategy.account.paper ? 'yes' : 'no' %></span></td>
              <td><span><%= strategy.account.valid ? 'yes' : 'no'%></span></td>
              <td>
                <a href="/strategy/<%= strategy.id%>">Details</a>
                <a href="/strategy/<%= strategy.id%>/quantities">Quantities</a>
                <a href="/strategy/<%= strategy.id%>/instances">Instances</a>
              </td>
              <td><button class="btn btn-primary" onclick="deleteStrategy('<%= strategy.id%>')">Delete</button></td>
            </tr>
          <% } %>    
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- contentFor('scripts') %>
<script src="/javascripts/strategies.js"></script>