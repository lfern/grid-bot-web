<div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
        <h1>Strategy Quantities for 
        </h1>
        <h3><%= strategy.strategy_name%> / <%= strategy.strategy_type.strategy_type_name%></h3>
        <h4><%= strategy.account.account_name%> /
            <%= strategy.account.exchange.exchange_desc%>
            (<%= strategy.account.account_type.account_type_name%>)
        </h4>
        <form action="/strategy/<%= strategy.id %>/update_qty" method="post">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Buy quantity</th>
                    <th scope="col">Sell quantity</th>
                </tr>
                </thead>
                <tbody>
                <% for( let i = 0; i < locals.quantities.length; i++ ) { %>
                    <% let quantity = quantities[i]; %>
                    <tr>
                    <td>
                        <input type="text" name="qty-buy-<%= quantity.id_buy %>" value="<%= quantity.buy_order_qty %>" size="30" >
                    </td>
                    <td>
                        <input type="text" name="qty-sell-<%= quantity.id_buy %>" value="<%= quantity.sell_order_qty %>" size="30" >
                    </td>
                    </tr>
                <% } %>    
                </tbody>
            </table>
            <button type="submit">Update strategy quantities</button>
        </form>
        </div>
    </div>
</div>
