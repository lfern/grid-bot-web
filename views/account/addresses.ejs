<div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
        <h1>Addresses for 
          <a href="/account/<%=account.id%>/addresses/create" class="btn btn-primary float-right">New address</a>
        </h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Address</th>
              <th scope="col">Confidential</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < locals.addresses.length; i++ ) { %>
              <% let address = addresses[i]; %>
              <tr id="<%= address.id%>">
                <td><span><%= address.address %></span></td>
                <td><span><%= address.confidential ? 'yes' : 'no' %></span></td>
                <td><button class="btn btn-primary" data-toggle="modal" data-target="#modal-delete" data-callback="deleteAddress" data-parameter="<%= address.id%>">Delete</button></td>
              </tr>
            <% } %>    
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- contentFor('scripts') %>
  <script src="/javascripts/account-addresses.js"></script>
  <%- include('../partials/confirm-callback', {id:"modal-delete", okbutton:"Delete", msg:"Do you want to remove this address?"}) %>