<div class="container">
    <div class="row align-items-center">
        <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
            <h1>Address for <%= account.name %></h1>
            <form action="/account/<%= account.id%>/addresses/create" method="post">
                <div class="formgroup">
                    <label for="address" class="small mb-1 mt-3">Address:</label>
                    <input placeholder="Please enter address" class="form-control" type="text" name="address" required=true value="<%= formData.address%>">
                    <% if (locals.errors && locals.errors.address) { %>
                     <p class="small text-danger"><%= errors.address %></p>
                    <% } %>

                    <div class="form-check mb-1 mt-3">
                        <input class="form-check-input" type="checkbox" value="" name="confidential">
                        <label class="form-check-label" for="confidential">
                          Confidential address?
                        </label>
                    </div>
                    <% if (locals.errors && locals.errors.confidential) { %>
                        <p class="small text-danger"><%= errors.confidential %></p>
                    <% } %>

                    <button class="mt-3 btn btn-primary" type="submit">Create address</button>
                </div>
            </form>
        </div>
    </div>
</div>