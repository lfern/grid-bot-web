<div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
        <h1>Transactions for 
          <a href="/account/<%=account.id%>/broadcast-transactions/create" class="btn btn-primary float-right">New transaction</a>
        </h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Hash</th>
              <th scope="col">Txid</th>
              <th scope="col">Confirmed</th>
              <th scope="col">Fee</th>
              <th scope="col">Sent at</th>
              <th scope="col">Valid</th>
              <th scope="col">Actions</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < locals.transactions.length; i++ ) { %>
              <% let transaction = transactions[i]; %>
              <tr id="<%= transaction.id%>">
                <td class="wrap-anyware"><span><%= transaction.transaction_hash%></span></td>
                <td><span><%= transaction.txid %></span></td>
                <td><span><%= transaction.confirmed ? 'yes' : 'no' %></span></td>
                <td><span><%= transaction.fee %></span></td>
                <td><span><%= transaction.sent_at %></span></td>
                <td><span><%= transaction.valid ? 'yes' : 'no' %></span></td>
                <td>
                    <a href="/account-broadcast-transaction/<%= transaction.id%>">Details</a>
                  </td>
                <td><button class="btn btn-primary" onclick="deleteBroadcast('<%= transaction.id%>', '<%= transaction.account_id%>')">Delete</button></td>
              </tr>
            <% } %>    
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- contentFor('scripts') %>
  <script src="/javascripts/account-broadcast-transactions.js"></script>

