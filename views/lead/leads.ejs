<div class="container">
  <div class="row align-items-center">
    <div class="col-md-6 order-md-1 text-center text-md-left pr-md-5">
      <h1>Leads</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < locals.leads.length; i++ ) { %>
            <% let lead = leads[i]; %>
            <tr id="<%= lead.id%>">
              <td><span><%= lead.email %></span></td>
              <td><a href="/lead/<%= lead.id%>">Details</a></td>
              <td><button class="btn btn-primary" onclick="deleteLead('<%= lead.id%>')">Delete</button></td>
            </tr>
          <% } %>    
        </tbody>
      </table>
    </div>
  </div>
</div>
<script src="/javascripts/leads.js"></script>