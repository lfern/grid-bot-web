<div class="container">
    <div class="row align-items-center">
        <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
            <h1>Account</h1>
            <form action="/notificationmanager/telegram/<%= formData.id%>/update" method="post">
                <div class="formgroup">
                    <label for="description" class="small mb-1 mt-3">Name:</label>
                    <input placeholder="Please enter description" class="form-control" type="text" name="description" required=true value="<%= formData.description%>">
                    <% if (locals.errors && locals.errors.description) { %>
                     <p class="small text-danger"><%= errors.description %></p>
                    <% } %>

                    <label for="chat_id" class="small mb-1 mt-3">Chat id:</label>
                    <input placeholder="Please enter chat id" class="form-control" type="text" name="chat_id" required=true value="<%= formData.chat_id%>">
                    <p class="small">You must start bot telegram to send you direct messages
                        <a target="_blank" href="<%=botUrl%>">Click this link</a>, login in your telegram account and press start (or create a new channel and add this bot to the channel)</p>
                    <% if (locals.errors && locals.errors.chat_id) { %>
                     <p class="small text-danger"><%= errors.chat_id %></p>
                    <% } %>

                    <label for="level" class="small mb-1 mt-3">Level:</label>
                    <select class="form-control" name="level">
                        <option value="3" <%=formData.level == 3?'selected':''%>>critical</option>
                        <option value="2" <%=formData.level == 2?'selected':''%>>error</option>
                        <option value="1" <%=formData.level == 1?'selected':''%>>warning</option>
                        <option value="0" <%=formData.level == 0?'selected':''%>>info</option>
                  </select>
                    <% if (locals.errors && locals.errors.level) { %>
                        <p class="small text-danger"><%= errors.level %></p>
                    <% } %>

                    <button class="mt-3 btn btn-primary" type="submit">Update telegram id</button>
                </div>
            </form>
        </div>
    </div>
</div>
