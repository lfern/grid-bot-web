<div class="container">
    <div class="row align-items-center">
        <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
            <h1>Add strategy to chat <%= telegram.description %></h1>
            <form action="/notificationmanager/telegram/<%=telegram.id%>/strategy/add" method="post">
                <% strategies.forEach(strategy => { %>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" name="strategy" value="<%= strategy.id %>">
                        <label class="strategy" for="exampleCheck1"><%= strategy.id %> - <%= strategy.strategy_name %></label>
                    </div>
                    <% }) %>
                <button class="mt-3 btn btn-primary" type="submit">Add strategies to chat</button>
            </form>
        </div>
    </div>
</div>