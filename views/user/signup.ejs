<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-md-2 col-md-8">
            <div class="jumbotron">
                <h2 class="text-center">Sign up</h2>
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <form action="/signup" method="post">
                            <div class="formgroup">
                                <label for="email" class="small mb-1 mt-3">Email:</label>
                                <input placeholder="Please enter your email" class="form-control" type="email" name="email" required=true value="<%= formData.email%>">
                                <% if (locals.errors && locals.errors.email) { %>
                                 <p class="small text-danger"><%= errors.email %></p>
                                <% } %>
                                <label for="password" class="small mb-1 mt-3">Password</label>
                                <input placeholder="New Password" class="form-control" type="password" name="password" required=true>
                                <% if (locals.errors && locals.errors.password) { %>
                                    <p class="small text-danger"><%= errors.password %></p>
                                <% } %>
                                <button class="mt-3 btn btn-primary" type="submit">Sign up</button>
                                <p class="mt-2 mb-0">Already have an account? <a href="/login">Log in here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 offset-md-2 col-md-8"></div>
</div>