<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-md-2 col-md-8">
            <div class="jumbotron">
                <h2 class="text-center">Login</h2>
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <form action="/login" method="post">
                            <div class="formgroup">
                                <label for="email" class="small mb-1 mt-3">Email:</label>
                                <input placeholder="Please enter your email" class="form-control" type="email"
                                    name="email" required=true>
                                <label for="password" class="small mb-1 mt-3">Password</label>
                                <input placeholder="Enter your current password" class="form-control" type="password"
                                    name="password" required=true>
                                <button class="mt-3 btn btn-primary" type="submit">Login</button>
                                <p class="mt-2 mb-0">Forgot your password? <a href="#">Reset here</a></p>
                                <p class="m-0">Don't have an account? <a href="/signup">Sign up here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 offset-md-2 col-md-8"></div>
</div>