<div class="container">
    <div class="row align-items-center">
        <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
            <h1>Strategy</h1>
            <form action="/usermanager/<%= dbuser.id %>/update" method="post">
                <div class="form-row">
                    <label class="col-sm-2 col-form-label">Email:</label>
                    <span class="form-control col-sm-10"><%= dbuser.email %></span>
                </div>    
                <div class="formgroup">
                    <div class="form-check mb-1 mt-3">
                        <input class="form-check-input" type="checkbox" value="" name="is_admin" <%= locals.formData !== undefined? (formData.is_admin != undefined?'checked':'') : (dbuser.is_admin?'checked':'') %>>
                        <label class="form-check-label" for="is_admin">
                          Is admin
                        </label>
                    </div>
                    <% if (locals.errors && locals.errors.is_admin) { %>
                        <p class="small text-danger"><%= errors.is_admin %></p>
                    <% } %>


                    <div class="form-check mb-1 mt-3">
                        <input class="form-check-input" type="checkbox" value="" name="validated" <%= locals.formData !== undefined? (formData.validated != undefined?'checked':'') : (dbuser.validated?'checked':'') %>>
                        <label class="form-check-label" for="validated">
                          Validated
                        </label>
                    </div>
                    <% if (locals.errors && locals.errors.validated) { %>
                        <p class="small text-danger"><%= errors.validated %></p>
                    <% } %>

 
                    <button class="mt-3 btn btn-primary" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
