<div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 order-md-1 text-center text-md-left pr-md-5">
        <h1>Strategies 
        </h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Email</th>
              <th scope="col">Is admin</th>
              <th scope="col">Is validated</th>
              <th scope="col">Actions</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < locals.dbusers.length; i++ ) { %>
              <% let dbuser = dbusers[i]; %>
              <tr id="<%= dbuser.id%>">
                <td><span><%= dbuser.email %></span></td>
                <td><span><%= dbuser.is_admin ? 'yes' : 'no' %></span></td>
                <td><span><%= dbuser.validated ? 'yes' : 'no'%></span></td>
                <td>
                  <a href="/usermanager/<%= dbuser.id%>">Edit</a>
                </td>
                <td><button class="btn btn-primary" onclick="deleteUser('<%= dbuser.id%>')">Delete</button></td>
              </tr>
            <% } %>    
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%- contentFor('scripts') %>
  <script src="/javascripts/usermanager.js"></script>